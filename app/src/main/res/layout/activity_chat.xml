<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Chat">

    <ImageView
        android:id="@+id/back_c"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginLeft="@dimen/_11sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@drawable/back_arrow_img" />

    <LinearLayout
        android:id="@+id/title_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_c"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:orientation="horizontal">

        <com.example.gogasrider.Customs.BoldText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conversation with"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp" />

        <com.example.gogasrider.Customs.BoldText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Zeeshan"
            android:textColor="@color/yellow"
            android:textSize="@dimen/_15sdp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chat_cont"
        android:layout_below="@+id/title_c"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey3"
        android:layout_below="@+id/rv"/>

    <RelativeLayout
        android:id="@+id/chat_cont"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp">

        <ImageView
            android:id="@+id/emoji_c"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/emoji_icon" />

        <EditText
            android:id="@+id/body_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/attachment_c"
            android:layout_toRightOf="@+id/emoji_c"
            android:background="@android:color/transparent"
            android:hint="Write a message..."
            android:textColor="@color/black"
            android:textColorHint="@color/light_grey"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/attachment_c"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_toLeftOf="@+id/mic_c"
            android:src="@drawable/attachment_icon" />

        <ImageView
            android:id="@+id/mic_c"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:padding="@dimen/_3sdp"
            android:src="@drawable/mic_icon" />

    </RelativeLayout>

</RelativeLayout>