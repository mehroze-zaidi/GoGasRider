<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_lines_img">


        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/acceptBtn">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_below="@+id/skipTv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_40sdp">

                    <ImageView
                        android:id="@+id/emptyScreenImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/progress_img"

                        />

                    <com.example.gogasrider.Customs.ThinText
                        android:id="@+id/timeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="15 \nMin"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20ssp" />


                </RelativeLayout>

                <com.example.gogasrider.Customs.ThinText
                    android:id="@+id/reqDescTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relative1"
                    android:layout_marginTop="52dp"
                    android:gravity="center"
                    android:text="@string/Zeeshan_requesting_2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0" />


                <com.example.gogasrider.Customs.BoldText
                    android:id="@+id/skipTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="24dp"
                    android:text="@string/skip"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />


                <RelativeLayout
                    android:layout_below="@+id/reqDescTv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_25sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:background="@color/white1">

                    <ImageView
                        android:id="@+id/profilePic4Iv"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:src="@drawable/profile_pic" />

                    <ImageView
                        android:id="@+id/arrowIV"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_toEndOf="@+id/profilePic4Iv"
                        android:src="@drawable/arrow_img"
                        android:tint="@color/arrow_tint_color"/>

                    <com.example.gogasrider.Customs.ThinText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_toEndOf="@id/arrowIV"
                        android:gravity="center"
                        android:text="House No 12, Lane 3\n Street of Uzu, California"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />


                </RelativeLayout>


            </RelativeLayout>

        </ScrollView>

        <Button
            android:id="@+id/acceptBtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_above="@id/declineTv"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:background="@drawable/white_btn_bg"
            android:fontFamily="@font/montserrat"
            android:text="@string/accept"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent" />


        <com.example.gogasrider.Customs.BoldText
            android:id="@+id/declineTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="Decline"
            android:textColor="@color/white"
            android:textSize="@dimen/_13ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



    </RelativeLayout>


</RelativeLayout>